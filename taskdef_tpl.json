{
    "executionRoleArn": "$EXECUTION_ROLE",
    "containerDefinitions": [
      {
        "name": "$APP_NAME",
        "image": "$AWS_ACCOUNT_ID.dkr.ecr.$AWS_DEFAULT_REGION.amazonaws.com/$IMAGE_REPO_NAME:latest",
        "essential": true,
        "memoryReservation": "$MEM_RESERV",
        "portMappings": [
          {
            "hostPort": 0,
            "protocol": "tcp",
            "containerPort": 80
          }
        ],
        "environment": [
          {
            "name": "PORT",
            "value": "80"
          },
          {
            "name": "APP_NAME",
            "value": "$APP_NAME"
          }
        ]
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "networkMode": "awsvpc",
    "family": "$APP_NAME"
  }